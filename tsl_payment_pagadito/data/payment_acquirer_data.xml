<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--data noupdate="1"-->
	<data>
		<record id="payment_acquirer_pagadito" model="payment.acquirer">
			<field name="name">Pagadito</field>
			<field name="image_128" type="base64" file="tsl_payment_pagadito/static/src/img/pg-logo-pagadito.jpg"/>
			<field name="provider">pagadito</field>
			<field name="company_id" ref="base.main_company"/>
			<field name="display_as">Tarjeta de Crédito</field>
			<field name="view_template_id" ref="pagadito_form"/>
			<field name="description" type="html">
				<p>
					Pagadito es una solución de pagos en línea dirigida al mercado de Latinoamérica.
				</p>
				<ul class="list-inline">
					<li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
				</ul>
			</field>
			<field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_mastercard"),
														  ref("payment.payment_icon_cc_visa")])]'/>
		</record>
	</data>
</odoo>
